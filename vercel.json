{
  "version": 2,
  "name": "line-openai-bot",
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/legal/terms.html",
      "dest": "/public/legal/terms.html"
    },
    {
      "src": "/legal/privacy.html",
      "dest": "/public/legal/privacy.html"
    },
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/notify",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/expire",
      "schedule": "*/5 * * * *"
    }
  ]
}
